<h1>index</h1>

<table class = "table">
  <!-- thead-darkはブートストラップ -->
  <thead class = "thead-dark">
    <tr>
      <th>名前</th>
      <!-- 追加 -->
      <th>年齢</th>
      <th>趣味</th>
      <!-- ↓これがあると、thead-darkが反映される。 -->
      <th></th>

    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%=user.name %></td>
      <!-- 追加 -->
      <td><%=user.age %></td>
      <td><%=user.hobby %></td>
      <!-- <td><%= link_to "削除",user_path(user.id), method: :delete %></td> -->

      <!-- <td><button type="button" class="btn btn-primary">削除B</button></td> -->

      <td><%= link_to user_path(user.id), method: :patch do %>
          <button type="button" class="btn btn-primary">編  集</button>
          <% end %>
          <%= link_to user_path(user.id), method: :delete do %>
          <button type="button" class="btn btn-secondary">削除</button>
          <% end %>
      </td>

      <!-- <td></td> -->
    </tr>
    <% end %>
  </tbody>
</table>
