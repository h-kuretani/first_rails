<h1>hello world!</h1>
<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>名前</th>
    <th>趣味</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%=user.name %></td>
      <td><%=user.hobby %></td>
      <td>
        <!-- リンクを作るための　do ~ end -->
        <%= link_to edit_user_path(user.id), method: :get do %>
          <button type="button" class="btn btn-primary">編集</button>
        <% end %>

        <%= link_to user_path(user.id), method: :delete do %>
          <button type="button" class="btn btn-secondary">削除</button>
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
